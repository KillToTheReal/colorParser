{
  "manifest_version": 3,
  "name": "ColorParser",
  "version": "1.0",
  "author": "@killtothereal",
  "description": "Gathers all colors in current browser tab to get site color palette fast",
  "permissions": ["activeTab", "scripting"],
  "icons":{
    "16" : "icons/16.png",
    "32" : "icons/32.png",
    "64" : "icons/64.png",
    "128": "icons/128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ]
    }
  ],
  "action": {
    "default_popup": "popup.html"
  }
}
